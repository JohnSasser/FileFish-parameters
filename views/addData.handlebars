<div class="header">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Add information to current Exhibit</h1>
            <p class="lead">
                Select a database
            </p>

            <div class="btn-group">
                <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    Select an exhibit to add data
                </button>
                <div class="dropdown-menu">

                    {{#each exhibits}}

                    <a class="dropdown-item" href="#">
                        {{name}}
                    </a>
                    <div class="dropdown-divider"></div>

                    {{/each}}

                </div>
            </div>

        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">
        <h5 class="card-title">Enter the parameters of your exhibit</h5>

    </div>
</div>




<script src="../js/" async defer></script>